# Copy this file to .env and fill in your values.
# Used by Foundry (foundry.toml) for RPC endpoints and contract verification.

# --- RPC Endpoints ---
BSC_RPC_URL=                                  # BSC mainnet (required for deploy)
ETH_RPC_URL=                                  # Ethereum mainnet (optional)
POLYGON_RPC_URL=                              # Polygon (optional)
ARBITRUM_RPC_URL=                             # Arbitrum (optional)
BASE_RPC_URL=                                 # Base (optional)
SEPOLIA_RPC_URL=                              # Sepolia testnet (optional)

# --- Block Explorer API Keys (for contract verification) ---
BSCSCAN_API_KEY=                              # Required for BSC verification
ETHERSCAN_API_KEY=                            # Ethereum + Sepolia
POLYGONSCAN_API_KEY=
ARBISCAN_API_KEY=
BASESCAN_API_KEY=

# --- Deployment ---
DEPLOYER_PRIVATE_KEY=                         # Private key for deploy scripts
